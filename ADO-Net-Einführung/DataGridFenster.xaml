<Window x:Class="ADO_Net_Einführung.DataGridFenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_Net_Einführung"
        mc:Ignorable="d"
        Title="DataGridFenster" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DataGrid Name="Datenblatt"></DataGrid>
        <DataGrid Name="Datenblatt2" Grid.Row="1"></DataGrid>
        <Button Name="Update" Content="Update" Click="Update_Click" Grid.Row="2"></Button>
    </Grid>
</Window>
